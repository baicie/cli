{
  "name": "root",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --stream build",
    "clean": "rimraf --glob packages/*/dist temp .eslintcache",
    "check": "tsc --incremental --noEmit",
    "lint": "eslint --cache .",
    "lint-fix": "eslint --fix --cache .",
    "format": "run-p format-prettier format-rs format-toml",
    "format-prettier": "prettier --write --cache .",
    "format-toml": "taplo format",
    "format-rs": "cargo fmt",
    "format-check": "prettier --check --cache .",
    "test": "vitest",
    "test-unit": "vitest --project unit*",
    "test-e2e": "vitest --project e2e",
    "test-coverage": "vitest run --project unit* --coverage",
    "test-docs": "pnpm run docs-build",
    "docs": "pnpm --filter=./docs run docs",
    "docs-build": "pnpm --filter=./docs run docs-build",
    "docs-serve": "pnpm --filter=./docs run docs-serve",
    "stub": "pnpm run -r --parallel stub",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm stub && simple-git-hooks",
    "release": "tsx scripts/release.ts",
    "ci-publish": "tsx scripts/publish.ts",
    "ci-docs": "pnpm docs-build"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm check",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js|ts|tsx|yml|yaml|md|json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@taplo/cli": "^0.7.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.1",
    "@types/prompts": "^2.4.9",
    "@types/resolve": "^1.20.6",
    "@vitest/eslint-plugin": "^1.4.3",
    "commitizen": "^4.3.1",
    "cross-spawn": "^7.0.6",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import-x": "^4.16.1",
    "execa": "^9.6.0",
    "jsdom": "^27.2.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^16.2.6",
    "minimist": "^1.2.8",
    "npm-run-all2": "^8.0.4",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "rolldown": "1.0.0-beta.50",
    "rollup-plugin-license": "^3.6.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.16.5",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@types/cross-spawn": "^6.0.6",
    "consola": "^3.4.2",
    "rimraf": "^6.1.0"
  },
  "packageManager": "pnpm@10.22.0"
}
